{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#ffd899",
          "foreground": "#100e23",
          "powerline_symbol": "",
          "style": "powerline",
          "type": "os"
        },
        {
          "background": "#ffe9aa",
          "foreground": "#100e23",
          "powerline_symbol": "",
          "style": "powerline",
          "type": "root",
          "properties": {
            "root_icon": "√"
          }
        },
        {
          "background": "#ffffff",
          "foreground": "#100e23",
          "powerline_symbol": "",
          "style": "powerline",
          "type": "envvar",
          "properties": {
            "var_name": "POSH_EXTRA"
          }
        },
        {
          "background": "#ffffff",
          "foreground": "#100e23",
          "powerline_symbol": "",
          "style": "powerline",
          "type": "session",
          "properties": {
            "display_user": false
          }
        },
        {
          "type": "envvar",
          "powerline_symbol": "",
          "style": "powerline",
          "foreground": "#ffffff",
          "background": "#FF6471",
          "properties": {
            "var_name": "POSH_CONTEXT"
          }
        },
        {
          "background": "#91ddff",
          "foreground": "#100e23",
          "powerline_symbol": "",
          "properties": {
            "style": "mixed"
          },
          "style": "powerline",
          "type": "path"
        },
        {
          "foreground": "#ffffff",
          "background": "#0077c2",
          "powerline_symbol": "",
          "style": "powerline",
          "type": "git"
        },
        {
          "background": "#ff8080",
          "foreground": "#ffffff",
          "powerline_symbol": "",
          "properties": {
            "always_numeric": true
          },
          "style": "powerline",
          "type": "exit"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "console_title": true,
  "console_title_style": "template",
  "console_title_template": "{{.Env.POSH_EXTRA}}{{ .Host }}{{if .Root}} :: root{{end}} :: {{ .Folder }} :: {{.Shell}}"
}
